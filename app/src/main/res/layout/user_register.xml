<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:text="設定帳號"
        android:textColor="#484891"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:text="帳號"
        android:id="@+id/textView"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:text="密碼"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="註冊"
        android:id="@+id/buttonRegister"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

         />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextUsername"
        android:hint="輸入帳號"
        android:gravity="center"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPassword"
        android:hint="輸入密碼"
        android:inputType="textPassword"
        android:gravity="center"

        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="已經有帳號?"
        android:textColor="#e70e56"
        android:id="@+id/textView5"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />


<!--顯示確認密碼-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:text="確認密碼"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView3"

        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />


    <!--輸入確認密碼-->
    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etdoctor"
        android:hint="輸入密碼"
        android:inputType="textPassword"
        android:gravity="center"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2" />
    <!--姓名-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:text="姓名"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <!--輸入姓名-->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:hint="輸入姓名"
        android:gravity="center"
        android:layout_below="@+id/textView6"
        android:layout_toRightOf="@+id/textView7"
        android:layout_alignRight="@+id/etdoctor"
        android:layout_alignEnd="@+id/etdoctor" />


    <!--生日-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:text="生日"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <!--輸入生日-->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:hint="西元/月/日"
        android:gravity="center"
        android:id="@+id/editText6"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignRight="@+id/etdoctor"
        android:layout_alignEnd="@+id/etdoctor"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4" />

    <!--性別-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:text="性別"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <!--輸入性別-->


    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="男"
        android:textSize="24dp"
        android:id="@+id/radioButton2"
        android:checked="false"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toLeftOf="@+id/etdoctor"
        android:layout_toStartOf="@+id/etdoctor" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"
            android:textSize="24dp"
            android:id="@+id/radioButton3"
            android:checked="false"
            android:layout_weight="0.88"
            android:layout_gravity="center"
            android:layout_alignTop="@+id/radioButton2"
            android:layout_alignRight="@+id/textView5"
            android:layout_alignEnd="@+id/textView5" />



    <!--輸入身高-->
    <!--輸入信箱-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:text="信箱"
        android:id="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView9" />
    <!--輸入信箱-->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="...@..."
        android:gravity="center"
        android:ems="10"
        android:id="@+id/editTextEmail"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignRight="@+id/etdoctor"
        android:layout_alignEnd="@+id/etdoctor"
        android:layout_toLeftOf="@+id/radioButton3"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4" />
    <!--地址-->
    <!--輸入地址-->


    <!--體重-->
    <!--輸入體重-->


</RelativeLayout>
