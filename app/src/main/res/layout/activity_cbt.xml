<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mindhelper.mindhelper.CBT">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/tableRow2">

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Mind Helper"
            android:textSize="24sp"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:id="@+id/textView_home3"
            android:textSize="16sp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="|CBT|"
            android:id="@+id/textView30"
            android:textSize="16sp"
            android:layout_below="@+id/textView_home3"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="播放"
            android:id="@+id/textView32"
            android:textSize="16sp"
            android:layout_below="@+id/textView30"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi,京巴"
            android:id="@+id/textView33"
            android:textSize="10sp"
            android:layout_below="@+id/textView32"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|幫助|"
            android:id="@+id/textView34"
            android:textSize="10sp"
            android:layout_below="@+id/textView33"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登出"
            android:id="@+id/textView35"
            android:textSize="10sp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView34"
            android:layout_alignParentLeft="true" />
    </TableRow>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tableRow2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="認知行為治療 CBT"
            android:textSize="26sp"
            android:id="@+id/textView36"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView36"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="CBT"
                android:textSize="20sp"
                android:id="@+id/textView37"
                android:layout_below="@+id/tableRow3"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="每日活動排程"
                android:textSize="20sp"
                android:id="@+id/textView_daily"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/textView36" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="因應卡"
                android:textSize="20sp"
                android:id="@+id/textView39"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/textView36" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="思考改變紀錄"
                android:textSize="20sp"
                android:id="@+id/textView_tcr"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/textView36" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout4"
            android:layout_alignParentStart="true">

            <CalendarView
                android:id="@+id/calendar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></CalendarView>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>


